<?xml version="1.0" encoding="utf-8"?><!--
   Backup rules to exclude sensitive data from Android backups.
   See https://developer.android.com/guide/topics/data/autobackup
   for details.
   Note: This file is ignored for devices older than API 31
   See https://developer.android.com/about/versions/12/backup-restore
-->
<full-backup-content>
    <!-- Exclude DataStore preferences (contains user settings and auth state) -->
    <exclude domain="sharedpref" path="datastore"/>
    
    <!-- Exclude all shared preferences for security -->
    <exclude domain="sharedpref" path="."/>
</full-backup-content>